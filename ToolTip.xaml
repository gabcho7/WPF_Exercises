<Window x:Class="WPF_Udemy_Exercises.ToolTip"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Exercises"
        mc:Ignorable="d"
        Title="ToolTip" Height="450" Width="800">
    <Grid>
        <Button ToolTip="Explaining someting">Click here for more info</Button>
        <TextBlock ToolTip="Please enter your first name" Foreground="Red" Width="100" Height="100" >Name</TextBlock>
    </Grid>
</Window>
