<Window x:Class="WPF_Exercises.StackPanel_ListBox_VisualAndLogicalTree"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Exercises"
        mc:Ignorable="d"
        Title="StackPanel_ListBox_VisualAndLogicalTree" Height="450" Width="800">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" Margin="20">Hello</TextBlock>

        <ListBox Width="100" Height="100">
            <ListBoxItem Content="Item 1"/>
            <ListBoxItem Content="Item 2"/>
            <ListBoxItem Content="Item 3"/>


        </ListBox>
        <Button Content="Click me" Click="Button_Click" Width="100" Margin="20"></Button>
    </StackPanel>
</Window>
